<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OriginalSimon">

    <Button
        android:id="@+id/buttontl"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/buttons_tl"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttontr"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/buttons_tr"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/buttontl" />

    <Button
        android:id="@+id/buttonbl"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttons_bl"
        app:layout_constraintEnd_toEndOf="@+id/buttontl"
        app:layout_constraintTop_toBottomOf="@+id/buttontl" />

    <Button
        android:id="@+id/buttonbr"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/buttons_br"
        app:layout_constraintStart_toStartOf="@+id/buttontr"
        app:layout_constraintTop_toTopOf="@+id/buttonbl" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".5" />

</android.support.constraint.ConstraintLayout>